<div class="container text-left">
  <div class="pl-2">
    <h1>Historique</h1>
    <h3>filtres</h3>
  </div>
    <table class="table table-hover table-responsive">
      <thead>
        <tr>
          <th>Objet</th>
          <th>Date/Heure</th>
        </tr>
      </thead>
      <tbody>
        <% @receipts.each do |receipt| %>
          <tr class = "font-weight-light">
            <td><strong><%= receipt.subject %></strong>
                    <br><span><%= receipt.snippet %></span></td>
            <td><%= receipt.send_date.strftime("%d %b %Y - %H:%M") %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>

