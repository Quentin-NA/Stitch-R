<h1 class="text-left">Corbeille</h1>

<div class="container">
    <table class="table table-hover table-responsive text-left">
      <thead>
        <tr>
          <th>Objet</th>
          <th>Date/Heure</th>
        </tr>
      </thead>
      <tbody>
        <% @receipts.each do |receipt| %>
          <tr class = "font-weight-light">
            <td><strong><%= receipt.subject %></strong>
                    <br><span><%= receipt.snippet %></span></td>
            <td><%= receipt.send_date.strftime("%d %b %Y - %H:%M") %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>

