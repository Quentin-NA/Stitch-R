<div class="container">
  <h2> Supplier <%#= from = headers[1].value %> receipts </h2>
  <table class="table table-hover table-responsive text-left">
    <thead>
      <tr>
        <th>#</th>
        <th>Subject</th>
        <th>Date&time</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
    <% @messages.each do |message| %>
      <tr>
      <% headers = GmailApi::GetUserMessageHeaders.new(current_user, message.id, @metadatas).call %>
        <th scope="row"><i class="far fa-square"></i></th>
        <td><strong><%= subject = headers[2].value %></strong><br>
        <%= snippet = GmailApi::GetUserMessage.new(current_user, message.id).call.snippet %></td>
        <td><%= date = headers[0].value %></td>
        <td>
          <div class="d-flex justify-content-around">
            <i class="far fa-save"></i>
            <i class="far fa-minus-square"></i>
          </div>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <%= @messages %>

</div>
