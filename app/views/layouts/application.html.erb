<!DOCTYPE html>
<html>
  <head>
    <title>StitchR</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>
    <%= render 'shared/navbar'%>
    <%= render 'shared/flashes' %>
    <%= render 'shared/sidebar' unless (controller_name == "pages" && action_name == "home" ) ||
                                       (controller_name == "supplier_searches_users" && action_name == "index") ||
                                       (controller_name == "receivers" && action_name == "new" )%>

  <% if controller_name == "pages" && action_name == "home" %>
    <div>
      <div class="content-wrapper">
        <%= yield %>
      </div>
      <p class="alert"><%= alert %></p>
    </div>
    <%= render 'shared/footer' %>
  <% elsif controller_name == "receivers" && action_name == "new" %>
    <div class="container">
      <%= yield %>
    </div>
<!--     <p class="alert"><%#= alert %></p> -->
  <% elsif controller_name == "supplier_searches_users" && action_name == "index" %>
    <div class="without-dashboard-container">
      <%= yield %>
    </div>
    <p class="alert"><%= alert %></p>
  <% else %>
    <div class="with-dashboard-container pt-3">
      <%= yield %>
    </div>
  <% end  %>
  </body>
</html>
