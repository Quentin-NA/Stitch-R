<div class="container">
  <div>
    <div class="d-flex justify-content-between pt-2">
      <div class="d-flex flex-row m-2">
        <div>
          <%= image_tag @supplier_search.image, class: "supplier-logo"%>
          <h2 class= "text-left pl-3">Reçus <%= @supplier_search.name %></h2>
        </div>
        <div class="justify-content-between">
          <%#= link_to share_receipt_path(@receipts, receiver_id: current_user.receivers.first.id) do %>
          <button class="btn btn-primary">tout partager</button>
          <%# end %>
          <%#= link_to dismiss_receipt_path(@receipts) do %>
          <button class="btn btn-outline-secondary">tout ignorer</button>
          <%# end %>
        </div>
      </div>
    <p><%= @supplier_search.receipts.count %> nouveaux reçus à traiter</p>
  </div>
  <% if @supplier_search.receipts.count > 0%>
    <table class="table table-hover table-responsive text-left">
      <thead>
        <tr>
          <th>Date/Heure</th>
          <th>Objet</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @receipts.each do |receipt| %>
          <tr>
            <th>
              <%= receipt.send_date.strftime("%d-%m-%y %n à %H:%M")%>
            </th>
            <td>
              <span class="text-weight-bold"><%= receipt.subject %> >></span>
                <% if receipt.attachment_names.present? %>
                  <span class="text-weight-light"><%= receipt.snippet.truncate(100) %></span>
                  <% receipt.attachment_names.each do |attachment| %>
                    <span class="badge badge-secondary badge-pill"><%= attachment %></span>
                  <% end %>
                <% end %>
              </p>
            </td>
            <td scope="row">
              <div class="justify-content-between">
                <%= link_to share_receipt_path(receipt, receiver_id: current_user.receivers.first.id) do %>
                <button class="btn btn-primary btn-sm">partager</button>
                  <!-- <i class="fas fa-share-square"></i> -->
                <% end %>
                <%= link_to dismiss_receipt_path(receipt) do %>
                <button class="btn btn-outline-secondary btn-sm">ignorer</button>
                  <!-- <i class="far fa-window-close"></i> -->
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
  <p>Vous n'avez pas de reçu à traiter pour ce fournisseur</p>
  <button class="btn btn-secondary">tout ignorer</button>


  <% end %>
</div>
