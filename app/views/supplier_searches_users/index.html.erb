<h1>Ajouter de nouvelles recherches</h1>
<div class="row">
  <% @supplier_searches.each do |supplier_search| %>
    <div class="col-sm-3 my-3">
      <div class="card mx-2 shadow bg-white rounded">
        <div class="card-body">
          <% @email = supplier_search.from.scan(/(?<=@)[^.]+(?=\.)/).last%>
          <p class="card-text"><%= image_tag "//logo.clearbit.com/#{@email}.com", class: "supplier-logo"%></p>
          <h5 class="card-title"><%= supplier_search.from %></h5>
          <div class="d-flex">
            <% if current_user.supplier_searches.include?(supplier_search) %>
              <%= link_to "Ne pas souscrire", unsubscribe_supplier_searches_user_path(supplier_search), class: "btn btn-primary"  %>
            <% else %>
              <%= link_to "Souscrire", subscribe_supplier_searches_user_path(supplier_search), class: "btn btn-primary"  %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>